<!DOCTYPE html>
<html>
<head>
  <title>My Sidebar Page</title>
  <style>
    .sidebar {
      position: fixed;
      top: 0;
      right: -200px; /* 변경된 부분 */
      width: 200px;
      height: 100%;
      background-color: #f1f1f1;
      overflow-x: hidden;
      padding-top: 20px;
      transition: right 0.5s ease-in-out; /* 변경된 부분 */
    }

    .sidebar.open {
      right: 0; /* 변경된 부분 */
    }

    .top {
      height: 50px;
      background-color: #ccc;
    }

    .sidebar img {
      display: block;
      margin: 0 auto;
      transform: translateX(100%);
    }

    .popup {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.5);
      display: none;
      z-index: 1;
    }

    .popup-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .popup.open {
      display: block;
    }
  </style>
</head>
<body>
  <div class="top">
    <button class="toggle-btn">Toggle Sidebar</button>
  </div>

  <div class="sidebar">
    <img src="images/mainAlarmFalse.png" alt="mainAlarmFlase Image">
  </div>

  <div class="popup" id="myPopup">
    <div class="popup-content">
      <h2>Popup Content</h2>
      <p>This is a sample popup content.</p>
      <button class="close-btn">Close</button>
    </div>
  </div>

  <script>
    const sidebar = document.querySelector('.sidebar');
    const toggleBtn = document.querySelector('.toggle-btn');
    const popup = document.querySelector('.popup');
    const popupContent = document.querySelector('.popup-content');
    const closeBtn = document.querySelector('.close-btn');

    toggleBtn.addEventListener('click', function() {
      sidebar.classList.toggle('open');
      popup.classList.remove('open'); // 변경된 부분
    });

    popupContent.addEventListener('click', function(event) {
      event.stopPropagation(); // 변경된 부분
    });

    document.addEventListener('click', function(event) {
      if (event.target !== popupContent) { // 변경된 부분
        sidebar.classList.remove('open');
        popup.classList.remove('open');
      }
    });

    closeBtn.addEventListener('click', function() {
      popup.classList.remove('open');
    });
  </script>
</body>
</html>
