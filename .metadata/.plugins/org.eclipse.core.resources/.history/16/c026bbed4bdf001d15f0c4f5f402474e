<!DOCTYPE html>
<html>
<head>
  <title>My Sidebar Page</title>
  <style>
    .sidebar {
      position: fixed;
      top: 0;
      right: -200px; /* 수정된 위치 */
      width: 200px;
      height: 100%;
      background-color: #f1f1f1;
      overflow-x: hidden;
      padding-top: 20px;
      transition: all 0.3s ease-in-out; /* 추가된 코드 */
    }

    .sidebar.open {
      right: 0; /* 수정된 위치 */
    }

    .top {
      height: 50px;
      background-color: #ccc;
    }

    .sidebar img {
      display: block;
      margin: 0 auto;
      transform: translateX(100%);
    }

    .popup {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: none;
      justify-content: center;
      align-items: center;
    }

    .popup.open {
      display: flex;
    }

    .popup-content {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
    }

    /* 추가된 CSS */
    .popup-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>
  <div class="top">
    <button class="toggle-btn">Toggle Sidebar</button>
  </div>

  <div class="sidebar">
    <img src="images/mainAlarmFalse.png" alt="mainAlarmFlase Image">
  </div>

  <div class="popup-background"></div> <!-- 추가된 코드 -->

  <div class="popup">
    <div class="popup-content">
      <h2>Popup Content</h2>
      <p>This is the content of the popup.</p>
    </div>
  </div>

  <script>
    const sidebar = document.querySelector('.sidebar');
    const toggleBtn = document.querySelector('.toggle-btn');
    const popup = document.querySelector('.popup');
    const popupBackground = document.querySelector('.popup-background');

    toggleBtn.addEventListener('click', function() {
      sidebar.classList.toggle('open');
      popup.classList.remove('open');
      popupBackground.style.display = 'none';
    });

    popupBackground.addEventListener('click', function() { // 추가된 코드
      popup.classList.remove('open');
      popupBackground.style.display = 'none';
    });

    function openPopup() { // 추가된 코드
      popup.classList.add('open');
      popupBackground.style.display = 'block';
    }ㄴ
  </script>
</body>
</html>
