<!DOCTYPE html>
<html>
<head>
  <title>My Sidebar Page</title>
  <style>
    .sidebar {
      position: fixed;
      top: 0;
      right: -200px; /* 수정된 위치 */
      width: 200px;
      height: 100%;
      background-color: #f1f1f1;
      overflow-x: hidden;
      padding-top: 20px;
      transition: all 0.3s ease-in-out; /* 추가된 코드 */
    }

    .sidebar.open {
      right: 0; /* 수정된 위치 */
    }

    .top {
      height: 50px;
      background-color: #ccc;
    }

    .sidebar img {
      display: block;
      margin: 0 auto;
      transform: translateX(100%);
    }

    .popup {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: none;
      justify-content: center;
      align-items: center;
    }

    .popup.open {
      display: flex;
    }

    .popup-content {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
    }

    /* 추가된 CSS */
    .popup-background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body>
  <div class="top">
    <button class="toggle-btn">Toggle Sidebar</button>
  </div>

  <div class="sidebar">
    <img src="images/mainAlarmFalse.png" alt="mainAlarmFlase Image">
  </div>

  <div class="popup-background"></div> <!-- 추가된 코드 -->

  <div class="popup">
    <div class="popup-content">
      <h2>Popup Content</h2>
      <p>This is the content of the popup.</p>
    </div>
  </div>

  <script>
    const sidebar = document.querySelector('.sidebar');
    const toggleBtn = document.querySelector('.toggle-btn');
    const modal = document.getElementById('myModal');
    const closeBtn = document.getElementsByClassName('close')[0];

    toggleBtn.addEventListener('click', function() {
      sidebar.classList.toggle('open');
    });

    // 모달 팝업 띄우는 기능
    function openModal() {
      modal.style.display = 'block';
    }

    // 모달 팝업 닫는 기능
    function closeModal() {
      modal.style.display = 'none';
    }

    closeBtn.addEventListener('click', closeModal);

    // 팝업 바깥영역을 클릭하면 팝업이 닫히도록 함
    window.addEventListener('click', function(event) {
      if (event.target === modal) {
        modal.style.display = 'none';
      }
    });
  </script>
</body>
</html>
